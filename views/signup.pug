extends ../templates/template

block main
    section.signup
        div#signupContainer.signup_container
            h1 Create Account
            form#signup_form.signup_form(method="post" autocomplete="off" action="/signup/registering")
                div.signup_form_container
                    label(for="firstName") First Name
                    input(id="firstName" name="first_name" type="text" autofocus required)
                    label(for="lastName") Last Name
                    input(id="lastName" name="last_name" type="text" required)
                    label(for="email") E-Mail
                    input(id="email" name="email" type="email" required)
                    small(class="error_email" id="errorEmail") Email already registered.
                    label(for="username") Username
                    input(id="username" name="username" type="text" required)
                    small(class="error_username" id="errorUsername") User already in use.
                    label(for="password") Password
                    div.container_password_visibility
                        input(id="password" class="visibility" name="password" type="password" required)
                        span(id="passwordVisibility" class="password_visibility visibility" class="material-icons-round") visibility
                    label(for="repeatPassword") Repeat Password
                    div.container_password_visibility
                        input(id="repeatPassword" class="visibility" name="r_password" type="password" required)
                        span(id="repeatPasswordVisibility" class="password_visibility" class="material-icons-round") visibility
                    small(class="error_keys" id="errorKeys") The keys do not match.
                button(id="btnEmail" type="submit") Sign Up
        a(href="/login") Open session.